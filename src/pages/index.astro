---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';


const metadata = {
  title: 'Kasumi Labs',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Innovation at Scale"
    actions={[
      {
        variant: 'primary',
        text: 'Get in touch',
        href: '#contact',
        icon: 'tabler:message-circle',
      },
      { text: 'Learn more', href: '#about' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Kasumi Labs</span> - Building the Future of Technology
    </Fragment>

    <Fragment slot="subtitle">
      A technology company focused on innovative solutions that bridge the gap between cutting-edge research and practical applications. We specialize in AI, software development, and digital transformation.
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    id="about"
    title="About Kasumi Labs"
    subtitle="We are a technology company at the forefront of innovation, specializing in AI-driven solutions and cutting-edge software development. Our mission is to bridge the gap between advanced research and practical applications, creating tools and systems that empower businesses and individuals to achieve their full potential."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Kasumi Labs by the Numbers"
    subtitle="Innovation driven by results and measurable impact across our technology solutions."
    stats={[
      { title: 'Projects Delivered', amount: '25+' },
      { title: 'Technologies Mastered', amount: '15+' },
      { title: 'Years of Experience', amount: '8+' },
      { title: 'Client Satisfaction', amount: '100%' },
    ]}
  />

  <!-- Brands Widget ****************** -->

  <Brands
    title="Technology Stack"
    subtitle="We leverage cutting-edge technologies to deliver innovative solutions that drive results."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Node JS',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
        alt: 'Microsoft',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
        alt: 'Google',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="What services do we provide?"
    subtitle="We offer comprehensive technology solutions tailored to meet your specific needs, from AI development to full-stack applications."
    items={[
      {
        title: 'AI & Machine Learning',
        description:
          'Custom AI solutions, machine learning models, and intelligent automation systems designed to optimize your business processes.',
        icon: 'flat-color-icons:brain',
      },
      {
        title: 'Software Development',
        description:
          'Full-stack development services including web applications, mobile apps, and desktop software using modern frameworks and technologies.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Digital Transformation',
        description:
          'Comprehensive consulting and implementation services to modernize your technology stack and optimize digital workflows.',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Why choose Kasumi Labs?"
    subtitle="Our approach combines technical excellence with innovative thinking to deliver solutions that drive real results."
    columns={3}
    items={[
      {
        title: 'Cutting-Edge Technology',
        description:
          'We leverage the latest technologies and frameworks to build modern, scalable, and efficient solutions.',
        icon: 'tabler:artboard',
      },
      {
        title: 'Scalable Solutions',
        description: 'Our architectures are designed to grow with your business, adapting to changing needs seamlessly.',
        icon: 'tabler:picture-in-picture',
      },
      {
        title: 'Custom Development',
        description:
          'Every solution is tailored to your specific requirements, ensuring optimal performance and user experience.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Rapid Development',
        description: 'Agile methodologies and efficient processes enable us to deliver high-quality results quickly.',
        icon: 'tabler:rocket',
      },
      {
        title: 'AI Integration',
        description:
          'Seamless integration of AI and machine learning capabilities to enhance functionality and user experience.',
        icon: 'tabler:brain',
      },
      {
        title: 'Full-Stack Expertise',
        description: 'End-to-end development capabilities covering frontend, backend, database, and deployment.',
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'What types of projects does Kasumi Labs work on?',
        description:
          'We specialize in AI and machine learning solutions, full-stack web development, mobile applications, and digital transformation projects. Our expertise spans across various industries including healthcare, finance, e-commerce, and technology.',
      },
      {
        title: 'How long does a typical project take?',
        description:
          'Project timelines vary based on complexity and requirements. Simple applications can be completed in 2-4 weeks, while more complex AI solutions or enterprise systems may take 2-6 months. We provide detailed timelines during the initial consultation.',
      },
      {
        title: 'Do you offer ongoing support and maintenance?',
        description:
          'Yes, we provide comprehensive post-launch support including bug fixes, feature updates, performance optimization, and technical maintenance. We offer flexible support packages tailored to your specific needs.',
      },
      {
        title: 'What is your development process?',
        description:
          'We follow an agile development methodology with regular client communication, milestone reviews, and iterative development. This ensures transparency, quality, and alignment with your goals throughout the project.',
      },
      {
        title: 'Can you work with our existing technology stack?',
        description:
          'Absolutely. We have experience integrating with a wide range of existing systems and technologies. We can work with your current infrastructure or recommend improvements to enhance performance and scalability.',
      },
      {
        title: 'How do I get started with Kasumi Labs?',
        description:
          'Getting started is simple. Contact us through our website or email to schedule a free consultation. We\'ll discuss your project requirements, timeline, and provide a detailed proposal with transparent pricing.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Features3 Widget ************** -->

  <Features3
    id="contact"
    title="Let's build something amazing together"
    subtitle="Ready to transform your ideas into reality? Get in touch and let's discuss your project."
    columns={2}
    items={[
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'Send us an email',
          href: 'mailto:contact@kasumi-labs.com',
          variant: 'link',
        },
      },
      {
        title: 'Schedule a Call',
        icon: 'tabler:calendar',
        callToAction: {
          target: '_blank',
          text: 'Book a consultation',
          href: '#',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start your project',
        href: '#contact',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">Ready to innovate?</Fragment>

    <Fragment slot="subtitle">
      Join the growing number of companies that trust Kasumi Labs to deliver cutting-edge technology solutions.
      Let's discuss how we can help you achieve your goals.
    </Fragment>
  </CallToAction>
</Layout>
